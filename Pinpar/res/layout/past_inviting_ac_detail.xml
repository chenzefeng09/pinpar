<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:id="@+id/RL_top_sliding"
        android:layout_width="fill_parent"
        android:layout_height="160dp">
        
        <!-- 放置轮播图片位置 -->
	    <LinearLayout
	        android:id="@+id/top_sliding_viewpager"
	        android:layout_width="fill_parent"
	        android:layout_height="160dp"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/slideshow_loading"           
	        android:orientation="horizontal" />
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="30dp"
	        android:layout_alignParentBottom="true"
	        android:background="#88000000"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
			<!-- 放置图片标题的位置 -->
	         <TextView
	             android:id="@+id/top_news_title"
	             android:layout_width="0dp"
	             android:layout_weight="1"
	             android:layout_height="wrap_content"
	             android:text=""
	             android:layout_marginRight="8dp"
	             android:layout_marginLeft="5dp"
	             android:singleLine="true"
	             android:visibility="gone"
	             android:textColor="#F6F6F6"/>
			<!-- 放置图片中选中点的位置 -->
		    <LinearLayout
		        android:id="@+id/dots_ll"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dp"
		        android:gravity="center"
		        android:orientation="horizontal"/>
		</LinearLayout>
		
	    <RelativeLayout 
	        android:id="@+id/RL_ac_detail_nav"
	        android:layout_width="fill_parent"
	        android:layout_height="35dp"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/ac_navbg">
	        <Button 
	            android:id="@+id/btn_back"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="15dp"
	            android:layout_alignParentBottom="true"
	            android:background="@drawable/btn_back"/>
	        
	        <Button 
	            android:id="@+id/btn_share"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:layout_alignParentBottom="true"
	            android:background="@drawable/btn_share"/>
	    </RelativeLayout>
		
	     <ImageView 
            android:id="@+id/iv_ac_detail_decoration_bottom_bar"
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/top_sliding_drawer"
            android:layout_alignParentBottom="true"/>
	    
    </RelativeLayout>
    
			
	<ScrollView
	    android:id="@+id/sv_activity_detail_desc"
	    android:layout_width="fill_parent"
	    android:layout_height="150dp"
	    android:layout_below="@id/RL_top_sliding"
	    android:background="@color/white">
	     <RelativeLayout 
	         android:id="@+id/RL_in_Scroll_ac_detail"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content">
		    
	         <ImageView 
		        android:id="@+id/iv_ac_detail"
		        android:layout_width="fill_parent"
	            android:layout_height="30dp"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="3dp"
	            android:background="@drawable/ac_detail"/>
		    
	         <LinearLayout 
	             android:id="@+id/LL_acName"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal"
	             android:layout_below="@id/iv_ac_detail"
	             android:layout_marginTop="3dp"
	             android:layout_marginLeft="10dp">
	             <TextView 
			        android:id="@+id/tv_acName_tip"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/activity_item_name"
			        android:textSize="14sp"
			        android:textColor="@color/activity_detail_tip"/>
	             <TextView 
	                 android:id="@+id/tv_acName"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="5dp"
	                 android:text="@string/activity_fill_string"
	                 android:textSize="14sp"
			        android:textColor="@color/activity_detail"/>
	             <ImageView 
	                 android:id="@+id/iv_ac_detail_inviting"
	                 android:layout_width="40dp"
	                 android:layout_height="fill_parent"
	                 android:layout_marginLeft="3dp"
	                 android:background="@drawable/ac_stamp_inviting"/>
	         </LinearLayout>
	         
	         <LinearLayout 
	             android:id="@+id/LL_acShop"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal"
	             android:layout_below="@id/LL_acName"
	             android:layout_marginTop="3dp"
	             android:layout_marginLeft="10dp">
	             <TextView 
			        android:id="@+id/tv_acShop_tip"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/activity_shop"
			        android:textSize="14sp"
			        android:textColor="@color/activity_detail_tip"/>
	             <TextView 
	                 android:id="@+id/tv_acShop"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="5dp"
	                 android:text="@string/activity_fill_string"
	                 android:textSize="14sp"
			        android:textColor="@color/activity_detail"/>
	         </LinearLayout>
	         
	         <LinearLayout 
	             android:id="@+id/LL_acAddress"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal"
	             android:layout_below="@id/LL_acShop"
	             android:layout_marginTop="3dp"
	             android:layout_marginLeft="10dp">
                 <TextView 
			        android:id="@+id/tv_acAddress_tip"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/activity_address"
			        android:textSize="14sp"
			        android:textColor="@color/activity_detail_tip"/>
	             <TextView 
	                android:id="@+id/tv_acAddress"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:text="@string/activity_fill_string"
	                android:textSize="14sp"
			        android:textColor="@color/activity_detail"/>
	             
	             <ImageView 
	                 android:id="@+id/iv_acAddress_city"
	                 android:layout_width="20dp"
	                 android:layout_height="16dp"
	                 android:layout_marginLeft="3dp"
	                 android:layout_gravity="center_vertical"
	                 android:background="@drawable/ac_map"/>
	         </LinearLayout>
	         
	         <LinearLayout 
	             android:id="@+id/LL_acTime"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal"
	             android:layout_below="@id/LL_acAddress"
	             android:layout_marginTop="3dp"
	             android:layout_marginLeft="10dp">
	             <TextView 
			        android:id="@+id/tv_acTime_tip"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/activity_time"
			        android:textSize="14sp"
			        android:textColor="@color/activity_detail_tip"/>
	             <TextView 
	                 android:id="@+id/tv_acTimeBegin"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="5dp"
	                 android:text="@string/activity_fill_string"
	                 android:textSize="14sp"
			        android:textColor="@color/activity_detail"/>
	             <TextView 
	                 android:id="@+id/tv_acTimeSplit"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="5dp"
	                 android:text="@string/activity_time_split"
	                 android:textSize="14sp"
			        android:textColor="@color/activity_detail"/>
	             <TextView 
	                 android:id="@+id/tv_acTimeEnd"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="5dp"
	                 android:text="@string/activity_fill_string"
	                 android:textSize="14sp"
			        android:textColor="@color/activity_detail"/>
	         </LinearLayout>
	         
	         <LinearLayout 
	             android:id="@+id/LL_acRegistEnd"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal"
	             android:layout_below="@id/LL_acTime"
	             android:layout_marginTop="3dp"
	             android:layout_marginLeft="10dp">
	             <TextView 
			        android:id="@+id/tv_acRegistEnd_tip"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/activity_regist_end"
			        android:textSize="14sp"
			        android:textColor="@color/activity_detail_tip"/>
	             <TextView 
	                 android:id="@+id/tv_acRegistEnd"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="5dp"
	                 android:text="@string/activity_fill_string"
	                 android:textSize="14sp"
			         android:textColor="@color/activity_detail"/>
	         </LinearLayout>
	         
	         <LinearLayout 
	             android:id="@+id/LL_acAllowedNum"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal"
	             android:layout_below="@id/LL_acRegistEnd"
	             android:layout_marginTop="3dp"
	             android:layout_marginLeft="10dp">
	             <TextView 
			        android:id="@+id/tv_acAllowedNum_tip"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/activity_allowed_num"
			        android:textSize="14sp"
			        android:textColor="@color/activity_detail_tip"/>
	             <TextView 
	                android:id="@+id/tv_acAllowedNum"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:text="@string/activity_fill_string"
	                android:textSize="14sp"
			        android:textColor="@color/activity_detail"/>
	         </LinearLayout>
	         
	          <LinearLayout 
	             android:id="@+id/LL_acForm"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal"
	             android:layout_below="@id/LL_acAllowedNum"
	             android:layout_marginTop="3dp"
	             android:layout_marginLeft="10dp"
	             android:layout_marginRight="10dp">
	             <TextView 
			        android:id="@+id/tv_acForm_tip"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/activity_form"
			        android:textSize="14sp"
			        android:textColor="@color/activity_detail_tip"/>
	             <TextView 
	                android:id="@+id/tv_acForm"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:text="@string/activity_fill_string"
	                android:textSize="14sp"
			        android:textColor="@color/activity_detail"/>
	         </LinearLayout>
	         
	          <LinearLayout 
	             android:id="@+id/LL_acDetail"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal"
	             android:layout_below="@id/LL_acForm"
	             android:layout_marginTop="3dp"
	             android:layout_marginBottom="3dp"
	             android:layout_marginLeft="10dp"
	             android:layout_marginRight="10dp">
	             <TextView 
			        android:id="@+id/tv_acDetail_tip"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/activity_detail"
			        android:textSize="14sp"
			        android:textColor="@color/activity_detail_tip"/>
	             <TextView 
	                android:id="@+id/tv_acDetail"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:text="@string/activity_fill_string"
	                android:textSize="14sp"
			        android:textColor="@color/activity_detail"/>
	         </LinearLayout>
	         
	          <LinearLayout 
	             android:id="@+id/LL_acContact"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal"
	             android:layout_below="@id/LL_acDetail"
	             android:layout_marginTop="3dp"
	             android:layout_marginBottom="5dp"
	             android:layout_marginLeft="10dp"
	             android:layout_centerHorizontal="true"
	             android:background="@color/activity_contact_bg">
	             <ImageView 
	                 android:id="@+id/iv_acContact"
	                 android:layout_width="20dp"
	                 android:layout_height="20dp"
	                 android:layout_marginLeft="5dp"
	                 android:layout_marginTop="3dp"
	                 android:layout_marginBottom="3dp"
	                 android:background="@drawable/ac_telephone"/>
	             <TextView 
			        android:id="@+id/tv_acContact_tip"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="3dp"
			        android:layout_gravity="center_vertical"
			        android:text="@string/activity_contact"
			        android:textSize="14sp"
			        android:textColor="@color/activity_detail_tip"/>
	             <TextView 
	                android:id="@+id/tv_acContact"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:layout_marginRight="5dp"
	                android:layout_gravity="center_vertical"
	                android:text="@string/activity_fill_string"
	                android:textSize="14sp"
			        android:textColor="@color/activity_detail"/>
	         </LinearLayout>
		    
	     </RelativeLayout>
	     
	</ScrollView>
	
    <RelativeLayout 
        android:id="@+id/RL_detail_the_statement"
        android:layout_width="fill_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/sv_activity_detail_desc">
        
        <RelativeLayout
		    android:id="@+id/RL_regist_end"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/activity_regist_end"
		    android:layout_alignParentBottom="true">
		    <TextView 
		        android:id="@+id/tv_regist_end"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="30dp"
		        android:layout_marginBottom="30dp"
		        android:layout_centerInParent="true"
		        android:text="@string/past_activity_regist_end"
		        android:textSize="18sp"
		        android:textColor="@color/white"/>
		</RelativeLayout>
        
         <ImageView 
	        android:id="@+id/iv_ac_the_statement_bottom_bar"
	        android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ac_drawer_bottom_bar"/>
        <ImageView 
	        android:id="@+id/iv_ac_the_statement"
	        android:layout_width="fill_parent"
	        android:layout_below="@+id/iv_ac_the_statement_bottom_bar"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ac_the_statement"/>
        
        
        <ListView 
            android:id="@+id/lv_inviting_detail_the_statement"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/RL_regist_end"
            android:layout_below="@id/iv_ac_the_statement">
            
        </ListView>
        
        
    </RelativeLayout>
	    
</RelativeLayout>
