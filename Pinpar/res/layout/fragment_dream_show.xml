<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title_theme" >

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="梦想秀"
            android:textColor="@color/white"
            android:textSize="18sp" />
        
        <ImageView
            android:id="@+id/iv_write_dream"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/write_dream"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/purple_squre">
                
                <TextView 
                    android:id="@+id/tv_dream_curr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:text="本期梦想"
                    android:textSize="16sp"
                    android:background="@color/title_theme"/>
                
                <com.ipinpar.app.view.CircleImageView 
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/default_avatar"
                    android:id="@+id/iv_img"
                    android:layout_below="@id/tv_dream_curr"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"/>
                
                <TextView 
                    android:id="@+id/tv_name_curr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dream_show_who_says"
                    android:textColor="#dcdcdc"
                    android:layout_toRightOf="@id/iv_img"
                    android:layout_below="@id/tv_dream_curr"
                    android:layout_alignTop="@id/iv_img"
                    android:layout_alignBottom="@id/iv_img"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:drawableRight="@drawable/dream_come_ture"
                    android:drawablePadding="8dp"
                    />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_time_curr"
                    android:layout_below="@id/tv_dream_curr"
                    android:layout_alignTop="@id/iv_img"
                    android:layout_alignBottom="@id/iv_img"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="#dcdcdc"
                    android:text="2015-07-09"
                    android:layout_marginRight="8dp"
                    />
                
                                <LinearLayout 
                    android:id="@+id/ll_dream_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_img"
                    android:orientation="vertical">
                    
                    <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_text_content"
                    android:text="这是一个大航海的时代，成为海贼王是我最大的梦想！"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp"
                    android:lineSpacingExtra="8dp"
                    android:layout_marginTop="12dp"
                    />
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:id="@+id/tv_dream_state"
                    android:textColor="#dcdcdc"
                    android:text="现在我即将踏上旅程"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/tv_text_content"/>
                
                <ImageView 
                    android:id="@+id/iv_dream"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="#dcdcdc"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp"
                    android:minHeight="100dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="12dp"/>
                </LinearLayout>
                
                <ImageView 
                    android:id="@+id/iv_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#dcdcdc"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@id/ll_dream_content"
                    android:layout_marginTop="8dp"
                    />
                
                <TextView 
                    android:id="@+id/tv_see_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iv_1"
                    android:text="查看更多"
                    android:drawablePadding="8dp"
                    android:textColor="#ababab"
                    android:drawableRight="@drawable/arrow_right"/>
                
                
            </RelativeLayout>
            
            
            <com.ipinpar.app.view.ExpandableHeightListView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/el_other_dream">
                
                
            </com.ipinpar.app.view.ExpandableHeightListView>
            
            
        </LinearLayout>
        
    </ScrollView>

  


</LinearLayout>